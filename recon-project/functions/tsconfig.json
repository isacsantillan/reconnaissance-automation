{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "target": "esnext", // Updated from es2018 to support BigInt
    "types": [
      "node"    ],
    "composite": true,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
    ,"src/**/*.js"
  ]
}